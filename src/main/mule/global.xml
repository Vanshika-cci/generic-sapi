        <http:listener-connection host="${http.host}" port="${http.port}" readTimeout="${http.readTimeout}" />
    </http:listener-config>
    <apikit:config name="generic-sapi-config" api="resource::ce235d46-115c-497c-b0e2-474afd80f5e9:generic-sapi:1.0.3:raml:zip:generic-sapi.raml" outboundHeadersMapName="outboundHeaders" httpStatusVarName="httpStatus" />
    <configuration-properties doc:name="configuration-properties" doc:id="586a1bf6-feab-46cb-830f-79273139ce01" file="properties\common\common.yaml" doc:description="Common Configuration Properties" />
    <configuration-properties doc:name="configuration-properties" doc:id="69e175aa-4796-4d78-88f6-caee49eff107" file="properties\config-${mule.env}.yaml" doc:description="Environment Specific Configuration Properties" />
    <secure-properties:config name="secure-properties-config" doc:name="Secure Properties Config" doc:id="dd2d96e4-e42c-4cb3-9f1b-c53010749727" file="properties\secure\config-${mule.env}-secure.yaml" key="${mule.key}" doc:description="Secure Configuration Properties" />
