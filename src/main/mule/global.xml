        <salesforce:basic-connection username="${sf.user}" password="${secure::sf.password}" securityToken="${secure::sf.token}" />
    </salesforce:sfdc-config>
	<global-property doc:name="Global Property" doc:id="d4788fab-bb34-44e9-bd12-6d08e142454b" name="mule.env" value="dev" />
	<global-property doc:name="Global Property" doc:id="77ab336a-9169-46a9-8887-49b3b556f47e" name="mule.key" value="abcdef1234567890" />
</mule>
